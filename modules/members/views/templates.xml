<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<template id="field_render" name="Render Form Field">
    <div t-attf-class="form-group">
        <t t-raw="field.label" />
        <t t-raw="field(class_='form-control')" />
    </div>
</template>

<template id="search_partner" name="Search Partner">
    <t t-call="website.layout">
        <t t-set="title">PolyFab Check-in</t>
        <div class="row">
            <div class="col-md-6 col-md-offset-2">
                <form role="form" action="/members" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <t t-foreach="form" t-as="field">
                        <t t-call="members.field_render" />
                    </t>
                    <button type="submit" class="btn btn-primary mt8">Search</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <t t-foreach="members" t-as="member">
                    <p>Member informations</p>
                    <p>Nom: <t t-esc="member.name"/></p>
                    <p>Email: <t t-esc="member.email"/></p>
                    <p>Statut Membership: <t t-esc="member.membership_state"/></p>
                    <p>Qualifications:</p>
                    <p>
                        <table border="0" style="width:100%">
                            <tr><th>Qualification</th><th>From</th><th>To</th><th>Is Valid</th><th>Note</th></tr>
                            <t t-foreach="member.qualification_lines" t-as="qualification">
                                <tr>
                                <td><em><t t-esc="qualification.qualification.name"/></em></td>
                                <td><t t-esc="qualification.qualification_date_from"/></td>
                                <td><t t-esc="qualification.qualification_date_to"/></td>
                                <td><t t-esc="qualification.valid"/></td>
                                <td><t t-esc="qualification.note"/></td>
                                </tr>
                            </t>
                        </table>
                    </p>
                </t>
            </div>
        </div>
    </t>
</template>


    </data>
</openerp>