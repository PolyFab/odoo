<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<template id="field_render" name="Render Form Field">
    <div t-attf-class="form-group">
        <t t-raw="field.label" />
        <t t-raw="field(class_='form-control')" />
    </div>
</template>

<template id="search_partner" name="Search Partner">
    <t t-call="website.layout">
        <t t-set="title">PolyFab Check-in</t>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <form role="form" action="/members" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <t t-foreach="form" t-as="field">
                        <t t-call="members.field_render" />
                    </t>
                    <button type="submit" class="btn btn-primary mt8">Search</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <p>Member informations</p>
                <t t-foreach="members" t-as="member">
                    <p>Nom: <t t-esc="member.name"/></p>
                    <p>Email: <t t-esc="member.email"/></p>
                    <p>Statut Membership: <t t-esc="member.membership_state"/></p>
                    <p>Qualifications:</p>
                    <p>
                        <t t-foreach="member.qualification_lines" t-as="qualification">
                            <div class="col-md-6">
                                <t t-esc="qualification.qualification.name"/>
                                <t t-esc="qualification.qualification_date_from"/>
                                <t t-esc="qualification.qualification_date_to"/>
                                <t t-esc="qualification.valid"/>
                                <t t-esc="qualification.note"/>
                            </div>
                        </t>
                    </p>
                </t>
            </div>
        </div>
    </t>
</template>


    </data>
</openerp>