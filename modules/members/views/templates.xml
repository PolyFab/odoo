<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<template id="field_render" name="Render Form Field">
    <div t-attf-class="form-group">
        <t t-raw="field.label" />
        <t t-raw="field(class_='form-control')" />
    </div>
</template>

<template id="search_partner" name="Search Partner">
    <t t-call="website.layout">
        <t t-set="title">PolyFab Check-in</t>
        <div class="row">
            <div class="col-md-6 col-md-offset-2">
                <form role="form" action="/members" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <t t-foreach="form" t-as="field">
                        <t t-call="members.field_render" />
                    </t>
                    <button type="submit" class="btn btn-primary mt8">Search</button>
                </form>
            </div>
        </div>
        <div class="row">
            <p></p>
            <div class="col-md-6 col-md-offset-2">
                <t t-foreach="members" t-as="member">
                    <p><t t-esc="member.name"/></p>
                    <p><t t-esc="member.email"/></p>
                    <p><t t-esc="member.membership_state"/></p>
                    <!--<t t-foreach="member.qualifications" t-as="qualification">-->
                </t>
            </div>
        </div>
    </t>
</template>


    </data>
</openerp>