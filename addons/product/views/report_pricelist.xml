<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_pricelist">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <h2><span t-esc="pricelist"/></h2>

                <div class="row">
                    <div class="col-xs-3">
                        <strong>Currency</strong>:
                        <div t-esc="currency"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Print date</strong>:
                        <div t-esc="time.strftime('%Y-%m-%d')"/>
                    </div>
                </div>
                <br/>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>
                                <strong>Description</strong>
                            </th>
                            <t t-if="titles">
                                <t t-foreach="titles" t-as="title">
                                    <th><strong t-esc="title"/></th>
                                </t>
                            </t>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="categories" t-as="c">
                            <tr>
                                <td colspan="100">
                                    <strong t-esc="c['name']"/>
                                </td>
                            </tr>
                            <tr t-foreach="c['products']" t-as="p">
                                <td>
                                    <t t-if="p.get('code')">
                                        [<span t-esc="p['code']"/>]
                                    </t> 
                                    <span t-esc="p['name']"/>
                                    <t t-if="p.get('attribute')">
                                        (<t t-esc="p['attribute']"/>)
                                    </t>
                                </td>
                                <td t-if="p.has_key('qty1') and p['qty1']"><strong t-esc="p['qty1']"/></td>
                                <td t-if="p.has_key('qty2') and p['qty2']"><strong t-esc="p['qty2']"/></td>
                                <td t-if="p.has_key('qty3') and p['qty3']"><strong t-esc="p['qty3']"/></td>
                                <td t-if="p.has_key('qty4') and p['qty4']"><strong t-esc="p['qty4']"/></td>
                                <td t-if="p.has_key('qty5') and p['qty5']"><strong t-esc="p['qty5']"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>
</odoo>
