<?xml version="1.0"?>
<odoo>
	<!-- Merge Mailing List  -->
    <record id="mass_mailing_merge_mailing_list_form" model="ir.ui.view">
        <field name="name">mass.mailing.merge.mailing.list.form</field>
        <field name="model">mail.merge.mailing.list</field>
        <field name="arch" type="xml">
            <form string="Merge Mailing List">
                <group string="Merge the Following Mailing Lists">
                    <field name="dst_massmail_list_id"/>
                    <field name='remove_duplicate'/>
                </group>
                <field name="mailing_list_ids">
                    <tree>
                        <field name="id" groups="base.group_no_one"/>
                        <field name="name"/>
                        <field name="contact_nbr" string="Number of Recipients"/>
                    </tree>
                </field>
                <p class="oe_grey">
                    Warning : Recipients that have been opt-out won't be merge into the destination mailing list.
                </p>
                <footer>
                    <button name="action_massmail_merge" type="object" string="Merge" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

	<!--  Merge Mailing List -->
    <record id="mass_mailing_merge_mailing" model="ir.actions.act_window">
        <field name="name">Merge Mailing Lists</field>
        <field name="res_model">mail.merge.mailing.list</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mass_mailing_merge_mailing_list_form"/>
        <field name="target">new</field>
    </record>

    <act_window id="action_mass_mailing_merge_massmail_list"
        multi="True"
        key2="client_action_multi" name="Merge Selected Mailing Lists"
        res_model="mail.merge.mailing.list" src_model="mail.mass_mailing.list"
        view_mode="form" target="new" view_type="form"/>
</odoo>
